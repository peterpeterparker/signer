{
	"name": "@dfinity/signer",
	"version": "0.0.1",
	"private": true,
	"workspaces": [
		"src/relying_party_frontend",
		"src/wallet_frontend"
	],
	"scripts": {
		"dev:party": "npm run dev -w src/relying_party_frontend",
		"dev:wallet": "npm run dev -w src/wallet_frontend",
		"build:party": "npm run build -w src/relying_party_frontend",
		"build:wallet": "npm run build -w src/wallet_frontend",
		"build": "npm run build:party && npm run build:wallet",
		"preview": "npm run preview --workspaces --if-present",
		"test": "npm run test --workspaces --if-present",
		"test:integration": "npm run test:integration --workspaces --if-present",
		"test:unit": "npm run test:unit --workspaces --if-present",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"generate": "scripts/did.sh && dfx generate && node scripts/did.update.types.mjs && node scripts/did.delete.types.mjs && npm run format",
		"deploy": "scripts/deploy.sh"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.0",
		"@types/node": "^20.12.10",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0-next.4",
		"prettier": "^3.1.1",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vite-plugin-environment": "^1.1.3",
		"vitest": "^1.2.0"
	},
	"type": "module",
	"dependencies": {
		"@dfinity/agent": "^1.3.0",
		"@dfinity/auth-client": "^1.3.0",
		"@dfinity/candid": "^1.3.0",
		"@dfinity/ledger-icrc": "^2.3.0",
		"@dfinity/principal": "^1.3.0",
		"@dfinity/utils": "^2.2.0",
		"buffer": "^6.0.3",
		"zod": "^3.23.7"
	}
}
